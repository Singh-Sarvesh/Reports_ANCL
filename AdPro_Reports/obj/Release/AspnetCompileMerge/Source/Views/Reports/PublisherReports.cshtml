            $("#lbltotalactiveads").html(totalactivead);
            $("#lbltotalnotactiveads").html(totalnotactivead);
            $("#lbladscancelled").html(totalcancelads);
            $("#lbltotalcollection").html(totalamt.toFixed(2));

